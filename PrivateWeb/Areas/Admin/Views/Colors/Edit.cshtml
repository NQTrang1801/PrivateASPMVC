@model PrivateWeb.Models.Color

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Title{
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <i class="bi bi-stickies"></i>
    </li>
    <li class="breadcrumb-item breadcrumb-active" aria-current="Colors"><a href="{{route('colors.index')}}">Colors</a>/Insert</li>
</ol>
}
@section Contentmain{
    <!-- Content wrapper start -->
    <div class="content-wrapper">

        <!-- Row start -->
        <div class="row gx-3">
            <div class="col-xxl-12">
                <div class="card card-370">
                    <div class="card-body">
                        <div class="custom-tabs-container">
                            <ul class="nav nav-tabs" id="formsTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <a class="nav-link active" id="color-tab" data-bs-toggle="tab" href="#color" role="tab" aria-controls="color" aria-selected="true">ID: {{$color->id}}</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="formsTabContent">

                                <div class="tab-pane fade show active" id="color" role="tabpanel">
                                    <form asp-action="Edit" method="post" id="colorForm" name="colorForm">

                                        <!-- Row start -->
                                        <div class="row gx-3">
                                            <div class="col-xxl-6 col-xl-6 col-lg-8 col-md-8 col-sm-8 col-12">
                                                <div class="mb-3">
                                                    <label asp-for="Name"  class="form-label">Enter color Name</label>
                                                    <div class="input-group">
                                                        <input asp-for="Name" type="text" class="form-control" id="color-name" name="name" placeholder="Name" value="@Model.Name" autocomplete="off">
                                                        <p></p>
                                                    </div>
                                                </div>
                                                <div class="mb-3">
                                                    <label asp-for="Code" class="form-label">Enter color Code</label>
                                                    <div class="input-group">
                                                        <input asp-for="Code" type="text" class="form-control" id="color-code" name="code" placeholder="code" value="@Model.Code" autocomplete="off">
                                                        <p></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Row end -->

                                        <!-- Form actions footer start -->
                                        <div class="form-actions-footer">
                                            <button type="reset" class="btn btn-light">Reset</button>
                                            <button type="submit" class="btn btn-success" style="color: black;">Update</button>
                                        </div>
                                        <!-- Form actions footer end -->
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- Row end -->

    </div>
    <!-- Content wrapper end -->
}

@section Scripts {
<script>
</script>
}
